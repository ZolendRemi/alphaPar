{% extends 'base.html.twig' %}
{% block title %}AlphaPar Homepage{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href={{ asset('css/login.css') }}>
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center">
                <h1>HomePage</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-6 p-5">
                <div class="row">
                    <div class="col-12">
                        <a href="{{ path('clientList') }}" class="btn btn-primary btn-block">Client Table</a>
                    </div>
                </div>
            </div>
            <div class="col-6 p-5">
                <div class="row">
                    <div class="col-12">
                        <a href="#" class="btn btn-primary btn-block">Manage Invoice (Beta)</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 p-5">
                {% if is_granted('ROLE_ADMIN') %}
                <div class="row">
                    <div class="col-12">
                        <a href="{{ path('userList') }}" class="btn btn-primary btn-block">User Table</a>
                    </div>
                </div>
                {% endif %}
            </div>
            <div class="col-6 p-5">

            </div>
        </div>
    </div>
{% endblock %}
